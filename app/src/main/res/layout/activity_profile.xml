<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center"
    android:orientation="vertical"
    tools:context=".Profile">

    <TextView
        android:id="@+id/scene_points3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/username"
        android:textSize="30dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:src="@drawable/rooster"
        app:civ_border_color="#FFFFCF40"
        app:civ_border_width="6dp" />

    <TextView
        android:id="@+id/scene_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/scene_points"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/scene_points2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/scene_points_value"
        android:textColor="@color/accent_material_dark_1"
        android:textColorLink="@color/accent_material_dark_1"
        android:textSize="30dp" />


</LinearLayout>